{
	"author": "Dylan Archer <dylarcher@gmail.com>",
	"bugs": {
		"email": "dylarcher@zohomail.com",
		"url": "https://github.com/dylarcher/legacy_concierge/issues"
	},
	"dependencies": {
		"@tailwindplus/elements": "^1.0.19",
		"tailwindcss": "^4.1.17"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"stylelint": "^16.26.1",
		"stylelint-config-standard": "^39.0.1",
		"stylelint-config-tailwindcss": "^1.0.0",
		"typescript": "^5.9.3",
		"vite": "7.2.6",
		"vite-bundle-analyzer": "^1.2.3",
		"vitest": "4.0.15"
	},
	"displayName": "Legacy Concierge",
	"exports": {
		".": {
			"types": "./types/global.d.ts",
			"import": "./_pkg/w3lc.esm.js",
			"require": "./_pkg/w3lc.cjs.js",
			"default": "./_pkg/w3lc.umd.js"
		},
		"./package.json": "./package.json"
	},
	"homepage": "https://dylarcher.github.io/legacy_concierge__web",
	"main": "src/index.html",
	"name": "legacy_concierge__web",
	"private": true,
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"publisher": "darcher",
	"repository": {
		"directory": "/",
		"type": "github",
		"url": "git+ssh://github.com/dylarcher/legacy_concierge.git"
	},
	"scripts": {
		"build": "vite build && node bin/generate-sitemap.js",
		"build:docs": "node bin/manage-versions.js && node bin/build-gh-pages.js && node bin/generate-version-index.js",
		"dev": "vite",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"lint:css": "stylelint src/style.css",
		"lint:css:fix": "stylelint src/style.css --fix",
		"preview": "vite preview",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"analyze:unused": "bun run bin/find-unused-tailwind.js",
		"analyze:bundle": "bun run build && open .tmp/bundle-report.html",
		"validate:tailwind": "bun run bin/validate-tailwind-classes.js",
		"validate:all": "bun run lint && bun run lint:css && bun run validate:tailwind",
		"version:build": "node bin/build-gh-pages.js",
		"version:cleanup": "node bin/manage-versions.js",
		"version:list": "node bin/manage-versions.js --list"
	},
	"type": "module",
	"types": "types/global.d.ts",
	"version": "0.3.0"
}
